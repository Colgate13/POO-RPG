{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/srt/Exemples/builds/*.txt"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./lib/*",
    "./dist/*",
    "src/**/__tests__/*"
  ]
}
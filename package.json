{
  "name": "POORPG",
  "version": "1.0.0",
  "description": "Game using POO in TypeScript",
  "main": "src/server.ts",
  "scripts": {
    "buildWebpack": "webpack --env PRODUCTION",
    "build": "tsc",
    "backend": "ts-node-dev --transpile-only --ignore-watch node_modules src/backend/server.ts",
    "mainGame": "ts-node-dev --transpile-only --ignore-watch node_modules src/gameSource/main.ts",
    "world": "ts-node-dev --transpile-only --ignore-watch node_modules src/wordImport.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll --maxWorkers=1",
    "test:clear": "jest --clearCache"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "terminal-game-io": "^3.1.0",
    "terminal-io-flufflys": "^3.1.0"
  }
}
